{
    "description": "NexentaStor Volume Driver for Docker",
    "documentation": "https://github.com/Nexenta/nexenta-docker-driver/",
    "entrypoint": ["/bin/nvd"],
    "interface": {
        "socket": "nvd.sock",
        "types": ["docker.volumedriver/1.0"]
    },
    "linux": {
        "capabilities": ["CAP_SYS_ADMIN"]
    },
    "mounts": [
        {
            "destination": "/etc/nvd/",
            "options": ["bind", "r"],
            "source": "/etc/nvd/",
            "type": "bind"
        }
    ],
    "network": {
        "type": "host"
    },
    "propagatedmount": "/mnt/nvd"
}
